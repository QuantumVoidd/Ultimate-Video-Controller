{
  "manifest_version": 3,
  "name": "Ultimate Video Controller",
  "version": "5.1",
  "description": "Professional video control suite with 16x speed and overlays.",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon128.png"], 
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "128": "icon128.png"
  }
}